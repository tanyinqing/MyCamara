<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="Widget" parent="android:Widget"></style>

    <style name="mCustomWindowTitleBackground" parent="@style/Widget">
        <item name="android:background">@color/themeColor</item>
    </style>

    <!--这个对输入框的修改 <item name="android:background">@drawable/editview_shape_selector</item>-->
    <style name="mEditText" parent="@style/Widget">
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:clickable">true</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMediumInverse</item>
        <item name="android:textColor">@color/TypefaceColor2</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <!--这个对白按钮的修改 -->
    <style name="mButton" parent="@style/Widget">
        <item name="android:background">@drawable/button_green_selector</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmallInverse</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textColor">@color/TypefaceColor</item>
        <item name="android:textSize">18sp</item>
        <item name="android:paddingTop">@dimen/padding2</item>
        <item name="android:paddingBottom">@dimen/padding2</item>
    </style>

    <!--这个是后来自己添加的 对文本的修改-->
    <style name="mTextView" parent="@style/Widget">
        <item name="android:textColor">@color/textColor5</item>
        <item name="android:textSize">@dimen/textSize2</item>
        <item name="android:paddingTop">@dimen/padding2</item>
        <item name="android:paddingBottom">@dimen/padding2</item>
        <item name="android:paddingLeft">@dimen/padding2</item>
    </style>

    <!--这个是后来自己添加的 对文本的修改 主要用作标题-->
    <style name="mTextView1" parent="@style/Widget">
        <item name="android:textColor">@color/textColor4</item>
        <item name="android:textSize">@dimen/textSize1</item>
        <item name="android:paddingTop">@dimen/padding1</item>
        <item name="android:paddingBottom">@dimen/padding1</item>
        <item name="android:paddingLeft">@dimen/padding1</item>
    </style>

    <style name="mListView" parent="@style/Widget">
        <item name="android:divider">@drawable/list_divider</item>
        <item name="android:dividerHeight">1dp</item>
        <item name="android:listSelector">@drawable/listview_selector</item>
    </style>

    <style name="mCheckBox" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:textSize">18sp</item>
        <!--<item name="android:textColor">@color/gray</item>
        <item name="android:paddingLeft">10dip</item>-->
        <!--<item name="android:background">@drawable/check_box</item>
        <item name="android:button">@null</item>-->
        <item name="android:button">@drawable/check_box</item>
    </style>
</resources>
